@model ShoeStoreProject.Models.Customer

@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Profile</h2>

