@using ShoeStoreProject.Models
@model List<Products>

    @using PagedList.Mvc
@model PagedList.IPagedList<ShoeStoreProject.Models.Product>


@{
    ViewBag.Title = "SP";
    Layout = "~/Views/NewFolder1/_Layout.cshtml";
}

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Style/css/LayoutSite.css" rel="stylesheet" />

    <style>
        .card {
            width: 250px;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        img {
            border-radius: 5px 5px 0 0;
        }

        #margin-card {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<h2>Xin chào quý khách</h2>
<h3> Tổng số sách hiện có là: @ViewBag.soluong</h3>





<a href="~/Views/Home/DetailGiay.cshtml">~/Views/Home/DetailGiay.cshtml</a>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3" id="margin-card">
                <div class="card">
                    <strong style="color: #593aa9"> @Html.DisplayFor(model => item.proName)</strong>

                    <a href="@Url.Action("DetailGiay", "Home", new { productID = item.ProductID},null)" title="Chi tiết sản phẩm">
                        <img src="~/Image/Giay_sport/@item.proImage" style="height:200px;width:200px;margin:10px; " />
                    </a>
                    Size: @Html.DisplayFor(model => item.Size)
                    <p>Price: @Html.DisplayFor(model => item.Price)</p>

                    <a href="/Cart/AddToCart/@item.ProductID">
                        <img src="@Url.Content("~/Image/icons8-cart-30.png")" style="width: 30px; height: 30px; float: left; " title="Thêm vào giỏ hàng..." />

                    </a>
                </div>

            </div>
        }
    </div>
</div>