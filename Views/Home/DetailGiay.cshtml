@using ShoeStoreProject.Models 
@{
    ViewBag.Title = "DetailGiay";
    //Layout = "~/Views/NewFolder1/_LayoutPage1.cshtml";
}

<head>
    <style>
        .card {
            width: 250px;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        img {
            border-radius: 5px 5px 0 0;
        }

        #margin-card {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<h2>THÔNG TIN SẢN PHẨM CỦA BẠN</h2>

<div class="sp">
    @foreach (var item in Model)
    {
        <div>
            @item.proImage
        </div>
        <div>
            @item.proName
            @item.Size
            @item.Color
            @item.Price
        </div>

    }
</div>


